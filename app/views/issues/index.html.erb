<p id="notice"><%= notice %></p>

<h1>Issues</h1>

<div class="rounded">
<table class="table table-bordered table-hover shadow p-3 mb-5 bg-white rounded">
  <thead class="table-dark">
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Client Project</th>
      <th>Severity</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.find_each do |issue| %>
      <tr>
        <td><%= issue.title %></td>
        <td><%= issue.description %></td>
        <td><%= issue.client_project %></td>
        <td><%= issue.severity_level %></td>
        <td><%= issue.resolve_status %></td>
        <td><%= link_to "Show", issue %></td>
        <td><%= link_to "Edit", edit_issue_path(issue) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>





